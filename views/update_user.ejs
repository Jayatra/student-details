<%- include('include/_header')%>


    <!--Main section-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> All Students</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Update Student</h2>
                <span class="text-light">Use the below form to update your details.</span>
            </div>
            <!--form handing-->
            <form method="POST" id="update_user">
                <div class="new_user">
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <input type="text" name="name" value="<%= user.name %>" placeholder="Mark Stoenis">
                    </div>
                    <div class="form-group">
                        <label for="contact" class="text-light">Contact</label>
                        <input type="tel" name="contact" value="<%= user.contact%>" placeholder="xxxxxxxxxx">
                    </div>
                    <div class="form-group">
                        <label for="subject" class="text-light">Subjects</label>
                        <input type="text" name="subject" value="<%= user.subject%>" placeholder="Maths,Physics,Bio..">
                    </div>
            
            
                    <div class="form-group">
                        <label for="classno" class="text-light">Class</label>
                        <div class="radio inline">
                            <input type="radio" id="radio-2" name="classno" value='11'<%= user.classno == '11' ? 'checked' : '' %>>
                            <label for="radio-2" class="radio-label">11</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" id="radio-3" name="classno" value='12'<%= user.classno == '12' ? 'checked' : '' %>>
                            <label for="radio-3" class="radio-label">12</label>
                        </div>
                    </div>
            
                    <div class="form-group">
                        <label for="society" class="text-light">Society</label>
                        <input type="text" name="society" value="<%= user.society%>" placeholder="Techno,arts...">
                    </div>
                    <div class="form-group">
                        <label for="society" class="text-light">Year</label>
                        <input type="year" name="year" value="<%= user.year%>" placeholder="XXXX">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </main>




    <%- include('include/_footer')%>