<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="contact" class="text-light">Contact</label>
            <input type="tel" name="contact" value="" placeholder="xxxxxxxxxx">
        </div>
        <div class="form-group">
            <label for="subject" class="text-light">Subjects</label>
            <input type="text" name="subject" value="" placeholder="Maths,Physics,Bio..">
        </div>


        <div class="form-group">
            <label for="classno" class="text-light">Class</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="classno" value='11'>
                <label for="radio-2" class="radio-label">11</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="classno" value='12'>
                <label for="radio-3" class="radio-label">12</label>
            </div>
        </div>

        <div class="form-group">
            <label for="society" class="text-light">Society</label>
            <input type="text" name="society" value="" placeholder="Techno,arts...">
        </div>
        <div class="form-group">
            <label for="society" class="text-light">Year</label>
            <input type="year" name="year" value="" placeholder="XXXX">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>